
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for user-specific data (if any)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Rules for analytics data
    match /analytics/stats {
      allow read: if true;
      allow write: if true; // Open for demo purposes to allow client-side increments
    }

    // Rules for publicly approved community reports
    match /community_reports/{reportId} {
      allow read: if true;
      // For this demo, we'll open write access to allow the client-side admin panel to function.
      allow write: if true;
    }

    // Rules for reports pending admin approval
    match /pending_reports/{reportId} {
      // Any user can submit a report for review.
      allow create: if true;
      
      // Reading, updating, or deleting is handled by the client-side admin panel.
      // For this demo, we open these rules to allow the panel to function.
      allow read, list, update, delete: if true;
    }
  }
}
